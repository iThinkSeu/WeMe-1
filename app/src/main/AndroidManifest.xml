<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.weme.remix">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".APP"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name=".ui.intro.AtyWelcome"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.intro.AtyLogin" />
        <activity android:name=".ui.main.AtyMain" />
        <activity android:name=".ui.community.AtyTopic"  android:theme="@style/AppTheme.Translucent"/>
        <activity android:name=".ui.community.AtyPost" android:theme="@style/AppTheme.Translucent"/>
        <activity android:name=".ui.AtyImage" android:theme="@style/AppTheme.Translucent"/>
        <activity android:name=".ui.user.AtyInfo" android:theme="@style/AppTheme.Translucent" />


    </application>
</manifest>
