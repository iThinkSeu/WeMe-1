<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/inuptodown</item>
        <item name="android:windowExitAnimation">@anim/outdowntoup</item>
    </style>

    <style name="RightTopAnimation">
        <item name="android:windowEnterAnimation">@anim/righttopin</item>
        <item name="android:windowExitAnimation">@anim/righttopout</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DialogTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogLike" parent="Dialog">
        <item name="android:windowBackground">@color/half_alpha_black</item>
    </style>

    <style name="DialogSlideAnim" parent="DialogTransparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/PopupWindowAnimation</item>
    </style>
    <style name="DialogMain" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/RightTopAnimation</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="InputEditText" parent="android:style/Widget.EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
