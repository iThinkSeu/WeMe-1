<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fgt_activity_item_image"
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="#c8c8dc"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fgt_activity_item_time_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/fgt_activity_item_top_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/activity_top"
            android:layout_margin="16dp"
            android:layout_width="48dp"
            android:layout_height="24dp" />
        <TextView
            android:background="@drawable/bg_activity_item_text"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/fgt_activity_item_count"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/fgt_activity_item_image"
            android:layout_width="36dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fgt_activity_item_title"
            android:layout_toEndOf="@+id/fgt_activity_item_image"
            android:layout_toRightOf="@+id/fgt_activity_item_image"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="#515171"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/fgt_activity_item_icon1"
            android:layout_below="@+id/fgt_activity_item_title"
            android:layout_alignLeft="@+id/fgt_activity_item_title"
            android:layout_alignStart="@+id/fgt_activity_item_title"
            android:src="@mipmap/date"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/fgt_activity_item_time"
            android:layout_toEndOf="@id/fgt_activity_item_icon1"
            android:layout_toRightOf="@id/fgt_activity_item_icon1"
            android:layout_alignTop="@+id/fgt_activity_item_icon1"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#c8c8dc"
            android:layout_width="wrap_content"
            android:layout_height="18dp" />
        <ImageView
            android:id="@+id/fgt_activity_item_icon2"
            android:layout_below="@+id/fgt_activity_item_icon1"
            android:layout_alignLeft="@+id/fgt_activity_item_title"
            android:layout_alignStart="@+id/fgt_activity_item_title"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/location"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/fgt_activity_item_location"
            android:layout_toEndOf="@id/fgt_activity_item_icon2"
            android:layout_toRightOf="@id/fgt_activity_item_icon2"
            android:layout_alignTop="@+id/fgt_activity_item_icon2"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#c8c8dc"
            android:layout_width="wrap_content"
            android:layout_height="18dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>